
<%= form_for post  do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title %>

    <br>
    
    <%= p.label :content %>
    <%= p.text_field :content %>

    <br> 

    <%= p.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br>

    <%= p.fields_for :categories, post.categories.build do |c| %>
        <%= c.label :name %>
        <%= c.text_field :name %>
    <% end %>

    <br><br>

    <%= p.submit %>
<% end %>